#:kivy 1.8.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    LoginPage:
    WaitingPage:
    StartPage:
    GamePage:

<LoginPage>:
    name: "login_page"
    username_text_input: username
    # canvas.before:
    #     Color:
    #         rgba: 0.2,0.2,1,1
    #     Rectangle:
    #         pos: self.pos
    #         size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: [20,40,10,100]
        spacing: 20
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "top"
            
            Image:
                source: "assets/uno_logo.png"
                size_hint: None, None
                size: 250, 250
        
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            padding: [10,180,10,10]
            Label:
                text: "Insert Username:"
                color: (1,1,1,1)
                font_size: "20sp"
                size_hint: 0.5, 0.3
        
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"

            TextInput:
                id: username
                size_hint: (.3, .4)
                padding_x: [20,20]
                padding_y: [10,0]
                multiline: False
                pos_hint: {"bottom": 1}

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"

            Button:
                text: "Enter"
                size_hint: (.4, .5)
                pos_hint: {'x': None, 'y': 1}
                on_release: root.change_screen()

<StartPage>:
    name: "start_page"
    Button:
        text: "Start"
        on_release: app.root.current = "game_page"

<WaitingPage>:
    name: "waiting_page"
    Label:
        text: "Waiting..."

<GamePage>:
    name: "game_page"
    Label:
        text: "UNO"
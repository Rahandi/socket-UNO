#:kivy 1.8.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    LoginPage:
    WaitingPage:
    StartPage:
    GamePage:

<LoginPage>:
    name: "login_page"
    BoxLayout:
        orientation: "vertical"
        padding: [10,50,50,10]
        spacing: 20
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "top"
            
            Image:
                source: "assets/logo.png"
                size_hint: None, None
                size: 200, 200
        
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            Label:
                text: "Insert Username:"
                color: (1,1,1,1)
                font_size: "20sp"
                size_hint: 0.5, 0.3
                pos_hint: {'top' : 0.65}
        
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"

            TextInput:
                id: username
                size_hint: (.3, .4)
                height: 200
                width: 500
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"

            Button:
                text: "Enter"
                size_hint: (.5, .5)
                height: 200
                width: 500
                on_release: root.change_screen()

<StartPage>:
    name: "start_page"
    Button:
        text: "Start"
        on_release: app.root.current = "game_page"

<WaitingPage>:
    name: "waiting_page"
    Label:
        text: "Waiting..."

<GamePage>:
    name: "game_page"
    Label:
        text: "UNO"
